# syntax=docker/dockerfile:1
ARG RUBY_VERSION=3.3.8
FROM ruby:$RUBY_VERSION-slim

WORKDIR /rails

# Install required packages for Rails dev
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential libpq-dev curl git nodejs yarn sqlite3 && \
    rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Install bundler
RUN gem install bundler

# Copy Gemfile first to cache bundle install
COPY Gemfile Gemfile.lock ./
RUN bundle install

# Copy the rest of the app
COPY . .

# Ensure bin files are executable
RUN chmod +x bin/*

# Expose Rails dev server port
EXPOSE 3000

# Start Rails in dev mode, binding to all IPs
CMD ["bin/rails", "server", "-b", "0.0.0.0"]
